<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white">



    <TextView
        android:id="@+id/folderMessage"
        android:text="@string/set_folder_message"
        style="@style/MessageText"/>


    <Button
        android:id="@+id/btnSelectFolder"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_below="@+id/folderMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/bg_inputs"
        android:drawableRight="@drawable/ic_folder"
        android:elevation="2dp"
        android:gravity="center_horizontal|center_vertical"
        android:onClick="addFile"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:text="@string/select_folder"
        android:textColor="@color/mainText"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_below="@+id/btnSelectFolder"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnSetFolder"
            android:text="@string/set_folder"
            style="@style/ButtonWhiteBorderBlue"/>
    </LinearLayout>


</RelativeLayout>